<!-- Section-->
<section class="py-5">
  <div class="container">
    <table class="table table-hover">
      <thead class="table-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">name</th>
          <th scope="col">price</th>
          <th scope="col">description</th>
          <th scope="col" width="5%">image</th>
          <th scope="col" width="5%"></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= item.description %></td>
            <td><%= image_tag(item.image, class: "img-fluid mb-5 mb-md-0") %></td>
            <td>
              <%= button_to edit_admin_item_path(item), { method: :get, class: "btn btn-light" } do %>
                <i class="bi bi-pencil-square"></i>
              <% end %>
              <%= button_to admin_item_path(item), { method: :delete, data: { turbo_confirm: "Delete this?" }, class: "btn btn-light" } do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= button_to "Add New Item", new_admin_item_path, method: :get, class: "btn btn-dark"%>
  </div>
</section>
